<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Thumbnail Gallery</h1>
    </div>
    {{#each (chunk 3 (sort-by "publishedAt:desc" model)) as |row|}}
      <div class="row">
        {{#each row as |video|}}
          <div class="col-md-4 portfolio-item">
            <a href="https://youtube.com/{{video.resourceId.videoId}}">
              <img class="img-responsive" src={{video.thumbnails.standard.url}}>
            </a>
            <h3>
              <a href="https://youtube.com/{{video.resourceId.videoId}}">{{video.title}}</a>
            </h3>
            <p>{{http-drop video.description}}</p>
          </div>
        {{/each}}
      </div>
    {{/each}}
  </div>
</div>
<hr>
